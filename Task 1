def task1():
    x = float(input("Введите x (x ≠ 0, x ≠ y, x ≠ -y): "))
    y = float(input("Введите y (y ≠ 0, y ≠ x, y ≠ -x): "))
    if x == 0 or y == 0 or x == y or x == -y:
        print("Ошибка: недопустимые значения x и y")
        return
    numerator1 = x + y
    denominator1 = x**2 - x*y
    term1 = numerator1 / denominator1
    numerator2 = 3*x + y
    denominator2 = y**2 - x**2
    term2 = numerator2 / denominator2
    t = term1 - term2
    print(f"Результат t = {t}")
task1()
